download() {
    [ -f dwl-583f471cfe61f9f92d238ad2d2d9a9db29e40aa5.zip ] || wget -t 3 -T 60 -O dwl-583f471cfe61f9f92d238ad2d2d9a9db29e40aa5.zip https://github.com/djpohly/dwl/archive/583f471cfe61f9f92d238ad2d2d9a9db29e40aa5.zip
}

build() {
    unzip dwl-583f471cfe61f9f92d238ad2d2d9a9db29e40aa5.zip
    cd dwl-583f471cfe61f9f92d238ad2d2d9a9db29e40aa5
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}